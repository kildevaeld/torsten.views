@import variables

.file-list {
	width 100%
	height 100%
	overflow-y auto
	display: flex
	flex-direction: row
	flex-wrap: wrap
	flex: 1 1
	
	/*.loader {
		width: 64px;
		height: 64px;
		background-image: url(loader-image)
		margin: auto;
		margin-top:20%;
	}*/

	.file-list-empty-view {
		width: 100%;
		margin-top: 40px;
		text-align: center;
	}

	.loader {
		margin: 20% auto;
	}
	

	
	
	
	.file-list-item {
		width 100%

		.thumbnail-container {
			//width: 64px
			margin-bottom: 5px
			max-height: 64px
			position: relative
			img {
				transition: opacity 0.5s
				opacity: 0
				margin: auto
			    position: absolute;
				margin: auto;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				max-width: 64px
				max-height: 64px
			}
			&.loading {
				.mime {
					background: embedurl("images/ring.gif")
					background-size: 30px 30px
					width: 30px
					height: 30px
					position: relative
					top: 16px
				}
			}
			&.loaded {
				img {
					opacity: 1
				}
				.mime {
					display: none
				}
			}
		}
		
	}
	
	&.collection-mode {

		.file-list-item {
			font-size: 60%
			position: relative
			cursor: pointer
			width: 13em
			float: left
			margin: 5px
			word-wrap: break-word
			text-align: center

			.thumbnail-container {
				min-height:64px;
			}

			i.mime {
				margin: auto;
			}
			
			.close-button {
				width: 32px;
				height: 35px;
				background-image: embedurl(close-image)
				position: absolute
				right: -10px
				top: -10px
				opacity 0
				transition-duration: 0.8s;
				transition-property: opacity;
			}

			&:hover {
			
				.close-button { 
					display: block
					opacity 1
				}
			}
		}	
	}
}
