@import variables

.file-list {
	width 100%
	height 100%
	overflow-y auto
	display: flex
	flex-direction: row
	flex-wrap: wrap
	flex: 1 1
	
	/*.loader {
		width: 64px;
		height: 64px;
		background-image: url(loader-image)
		margin: auto;
		margin-top:20%;
	}*/

	.file-list-empty-view {
		width: 100%;
		margin-top: 40px;
		text-align: center;
	}

	.loader {
		width: 64px;
		height: 64px;
		margin: 20% auto;
	}
	
	.file-list-item {
		width 100%
	}
	
	&.collection-mode {

		.file-list-item {
			font-size: 60%
			position: relative
			cursor: pointer
			width: 13em
			float: left
			margin: 5px
			word-wrap: break-word
			text-align: center

			.thumbnail-container {
				min-height:50px;
			}

			i.mime {
				margin: auto;
			}
			
			.close-button {
				width: 32px;
				height: 35px;
				background-image: embedurl(close-image)
				position: absolute
				right: -10px
				top: -10px
				opacity 0
				transition-duration: 0.8s;
				transition-property: opacity;
			}

			&:hover {
			
				.close-button { 
					display: block
					opacity 1
				}
			}
		}	
	}
}
