.file-gallery {
    display: flex;
    flex-direction: column;

    .gallery-area {
        max-height: 100%
        display: flex
        flex: 2   
        .gallery-list {
            flex: 2 2 auto
            min-width: 200px
            order: 1
        }
        .gallery-info {
            flex: initial
            width: 400px;
            min-width: 200px
            order: 2
        } 
    }
    
    .upload-progress-container {
        height: 2px
        width: 100%;    
        .upload-progress {
            
            transition 0.6s all ease-in-out
            height: 100%
            background-color: red
            width: 0%
        }
        margin-bottom: 10px
    }
    
    .gallery-toolbar {
        height: 50px   
    }
}
