.file-info  {
    width: 100%
    height 100%
    overflow-y auto
    margin-left: 5px
    .preview-region {
        height 40%
        .preview {
            height: 100%
            width 100%
            text-align center
            position: relative
            img, video, audio {
                position:absolute;

                max-width 100%
                max-height 100%
                box-shadow 1px 1px 2px 0px rgba(0,0,0,0.5)
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }
        }
    }
    
    .info-region {
        margin-top 5px
        padding-top 5px
        border-top 1px solid #eee
        .info {
      
            table-layout: fixed;
            width 100%
            td:first-child {
                font-weight bold
                vertical-align baseline
                width 35%
            }

            td:last-child {
                word-wrap break-word
            }
            .download {
                color: text-highlight
                cursor: pointer
            }
        }
    }             
}    